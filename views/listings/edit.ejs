<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">

    <h3 style="font-weight: 400;">Edit Listing</h3>
    <!-- Adding method override to send PUT request -->
    <div class="form-border">
    <form method="POST" novalidate class="needs-validation" action="/listings/<%= listing._id %>?_method=PUT" onsubmit="return validateEditForm()">
      
      <!-- Title Field -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input 
          id="title"
          name="listing[title]" 
          placeholder="Add a Catchy Title" 
          type="text" 
          class="form-control" 
          value="<%= listing.title %>"
          pattern="^[A-Za-z '\s]+$"
          required />
        <div class="invalid-feedback">Please Enter a valid Title</div>
      </div>

      <!-- Description Field -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          id="description"
          name="listing[description]" 
          class="form-control"
          required><%= listing.description %></textarea>
        <div class="invalid-feedback">Please enter a short description</div>
      </div>

      <!-- Image URL Field -->
      <div class="mb-3">
        <label for="image" class="form-label">Image Link</label>
        <input
          id="image"
          name="listing[image]"
          placeholder="Enter image URL/Link"
          type="text"
          class="form-control"
          value="<%= listing.image %>"
          required />
      </div>
      
      <div class="row">
        <!-- Price Field -->
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            id="price"
            name="listing[price]"
            placeholder="1200"
            type="number"
            class="form-control"
            value="<%= listing.price %>"
            required />
          <div class="invalid-feedback">Price should be a valid number</div>
        </div>

        <!-- Country Field -->
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            id="country"
            name="listing[country]"
            placeholder="India"
            type="text"
            class="form-control"
            value="<%= listing.country %>"
            required
            pattern="^[A-Za-z '\s]+$"
            />
          <div class="invalid-feedback">Country name should be valid</div>
        </div>
      </div>

      <!-- Location Field -->
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          id="location"
          name="listing[location]"
          placeholder="Jaipur, Rajasthan"
          type="text"
          class="form-control"
          value="<%= listing.location %>"
          required 
          pattern="^[A-Za-z '\s]+$"/>
        <div class="invalid-feedback">Location should be valid</div>
      </div>

      <!-- Submit Button -->
      <button class="btn btn-dark edit-btn mt-3 button-container ">Edit</button>
      <br></br>
    </form>
  </div>
  </div>
</div>

<script src="/js/script.js"></script>