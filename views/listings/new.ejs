<% layout("/layouts/boilerplate") %>
<div class="row justify-content-center mt-1">
  <div class="col-lg-8 col-md-4 col-sm-10">

    <h3 class="text-center mb-4">Create a New Listing</h3>
    
    <!-- Form to create a new listing -->
    <div class="form-border"> <!-- Added div for border and hover effect -->
      <form method="POST" action="/listings" novalidate class="needs-validation" onsubmit="return setDefaultImage()">
        
        <!-- Title Field -->
        <div class="mb-3">
          <label for="title" class="form-label"><b>Title:-</b></label>
          <input 
            id="title"
            name="listing[title]" 
            placeholder="Add a catchy Title" 
            type="text"  
            class="form-control"
            required
            pattern="^[A-Za-z\ 's]+$"/>  <!-- Only allow text and spaces -->
            
          <div class="invalid-feedback">Please enter a valid Title (no numbers or special characters)</div>
        </div>
    
        <!-- Description Field -->
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea 
            id="description" 
            name="listing[description]" 
            class="form-control"
            placeholder="Enter a brief description"
            rows="4"
            required
          ></textarea>
          <div class="invalid-feedback">Please enter a short description</div>
        </div>
        
        <!-- Image URL Field -->
        <div class="mb-3">
          <label for="image" class="form-label">Image Link</label>
          <input
            id="image"
            name="listing[image]"
            placeholder="Enter image URL/Link"
            type="text" 
            class="form-control"
          />
        </div>
    
        <!-- Price and Country Fields (Responsive Row) -->
        <div class="row">
          
          <!-- Price Field -->
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price (â‚¹)</label>
            <input 
              id="price" 
              name="listing[price]" 
              placeholder="Enter price" 
              type="number"  
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter a valid price</div>
          </div>
    
          <!-- Country Field -->
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input 
              id="country"
              name="listing[country]" 
              placeholder="Enter country" 
              type="text" 
              class="form-control"
              required
              pattern="^[A-Za-z '\s]+$"/>     
            <div class="invalid-feedback">Please enter a valid country name (no numbers or special characters)</div>
          </div>
        </div>
    
        <!-- Location Field -->
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input 
            id="location"
            name="listing[location]" 
            placeholder="Enter location" 
            type="text" 
            class="form-control"
            required
            pattern="^[A-Za-z '\s]+$"/>  <!-- Only allow text and spaces -->
      
          <div class="invalid-feedback">Please enter a valid location (no numbers or special characters)</div>
        </div>
    
        <!-- Submit Button -->
        <div class="d-grid button-container">
          <button class="btn btn-dark add-btn">Add Listing</button>
        </div>
        
        <br><br>
      </form>
    </div>
  </div>
</div>
    